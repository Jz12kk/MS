CREATE DATABASE corretora;
USE corretora;

CREATE TABLE Usuario (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  nome VARCHAR(100),
  email VARCHAR(100),
  senha VARCHAR(100),
  admin INT (1)
);

CREATE TABLE Casa (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  casa VARCHAR (100),
  cidade VARCHAR (100),
  estado VARCHAR (100),
  bairro VARCHAR (100),
  endereco VARCHAR(200),
  preco DECIMAL(10, 2),
  acombinar TEXT,
  dormitorios INT,
  banheiros INT,
  area FLOAT,
  Venda INT NOT NULL
);

CREATE TABLE Visita (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  data DATE,
  interesse VARCHAR(150),
  cliente INT UNSIGNED,
  telefone VARCHAR(20),
  FOREIGN KEY (id_imovel) REFERENCES Casa(id),
  FOREIGN KEY (cliente) REFERENCES Usuario(id)
);

CREATE TABLE Contrato (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  id_cliente INT UNSIGNED,
  data_contrato DATE,
  tipo_contrato ENUM('Compra', 'Venda', 'Locacao'),
  FOREIGN KEY (id_imovel) REFERENCES Casa(id),
  FOREIGN KEY (id_cliente) REFERENCES Usuario(id)
);

CREATE TABLE Chat (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  id_cliente INT UNSIGNED,
  mensagem TEXT,
  data_hora_envio DATETIME,
  FOREIGN KEY (id_imovel) REFERENCES Casa(id),
  FOREIGN KEY (id_cliente) REFERENCES Usuario(id)
);

CREATE TABLE ComentarioAvaliacao (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  id_cliente INT UNSIGNED,
  comentario TEXT,
  avaliacao INT,
  data_avaliacao DATE,
  FOREIGN KEY (id_imovel) REFERENCES Casa(id),
  FOREIGN KEY (id_cliente) REFERENCES Usuario(id)
);

CREATE TABLE Transacao (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  id_cliente INT UNSIGNED,
  data_transacao DATE,
  tipo_transacao ENUM('Compra', 'Venda', 'Aluguel'),
  valor DECIMAL(10, 2),
  FOREIGN KEY (id_imovel) REFERENCES Casa(id),
  FOREIGN KEY (id_cliente) REFERENCES Usuario(id)
);

CREATE TABLE Imagem (
  id INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
  id_imovel INT UNSIGNED,
  image_path TEXT NOT NULL,
  FOREIGN KEY (id_imovel) REFERENCES Casa(id) ON DELETE CASCADE
);
